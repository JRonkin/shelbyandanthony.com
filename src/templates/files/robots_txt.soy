{namespace file}

{template .robots_txt}
  {@param blockSearchEngines: bool}
  {@param hostname: uri}
  {@param protocol: string}

  {let $sitemapUrl kind="uri"}
    {call common.helpers.absoluteUrl data="all"}
      {param pathname kind="uri"}{call url.sitemap_xml /}{/param}
    {/call}
  {/let}

  User-agent: *
  {if $blockSearchEngines}
    {\n}Disallow: /
  {/if}
  {\n}Sitemap: {$sitemapUrl}
{/template}
